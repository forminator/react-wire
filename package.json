{
  "name": "@forminator/react-wire",
  "description": "connect react components with wire",
  "version": "0.5.0-alpha.1",
  "license": "MIT",
  "main": "lib/forminator-react-wire.js",
  "unpkg": "dist/forminator-react-wire.js",
  "module": "es/forminator-react-wire.js",
  "typings": "./index.d.ts",
  "files": [
    "dist",
    "lib",
    "es",
    "src",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/forminator/react-wire"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "libton-script build",
    "build:doc": "libton-script doc",
    "toc": "markdown-toc -i README.md",
    "test": "libton-script test",
    "lint": "libton-script lint",
    "format": "libton-script format",
    "format:check": "libton-script format --check",
    "validate": "libton-script lint && libton-script format --check && libton-script test",
    "prepublishOnly": "yarn validate && yarn build",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/react": "^13.0.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.43",
    "@types/use-sync-external-store": "^0.0.3",
    "husky": "^4.3.0",
    "jest-leak-detector": "^27.5.1",
    "libton-script": "^0.12.7",
    "lint-staged": "^10.4.2",
    "markdown-toc": "^1.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "standard-version": "^9.0.0",
    "weak-napi": "^2.0.2"
  },
  "dependencies": {
    "mitt": "^1.2.0",
    "use-sync-external-store": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
